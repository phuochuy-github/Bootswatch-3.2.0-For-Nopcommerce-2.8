<div class="forum-search-box">
    @using (Html.BeginRouteForm("Search", FormMethod.Get, new { @class = "navbar-form navbar-left" }))
    {
        var searchText = T("Forum.SearchForumsTooltip");
        <div class="form-search form-group">
            @Html.TextBox("searchterms", searchText, new { @class = "forum-search-box-text form-control", onclick = String.Format("if(this.value=='{0}')this.value=''", searchText), onblur = String.Format("if(this.value=='')this.value='{0}';", searchText) })
            <input type="submit" value="@T("Forum.SearchButton")" class="btn btn-sm forum-search-box-button" />
            <div class="advanced">
            @Html.RouteLink(T("Forum.AdvancedSearch").Text, "Search", new { adv = true }, new { title = T("Forum.AdvancedSearch").Text })
        </div>
        </div>
    }
</div>