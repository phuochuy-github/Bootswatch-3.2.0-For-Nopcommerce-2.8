@model ProductDetailsModel.ProductBreadcrumbModel
@using Nop.Web.Models.Catalog;

    <ul class="breadcrumb">
        @Html.Widget("productbreadcrumb_before")
        <li><a href="@Url.RouteUrl("HomePage")" title="@T("Categories.Breadcrumb.Top")">@T("Products.Breadcrumb.Top")</a></li>
        @for (int i = 0; i < Model.CategoryBreadcrumb.Count; i++)
        {
            var catBr = Model.CategoryBreadcrumb[i];
            <li><a href="@Url.RouteUrl("Category", new { SeName = catBr.SeName })" title="@catBr.Name">@catBr.Name</a></li>
        }
        @*uncomment to disable clickable link
        <strong>@Model.ProductName</strong>*@
        <li>
            <strong><a href="@Url.RouteUrl("Product", new { SeName = Model.ProductSeName })">@Model.ProductName</a></strong>
            @Html.Widget("productbreadcrumb_after")
        </li>
    </ul>

