@model IList<ProductTagModel>
@using Nop.Web.Models.Catalog;
@if (Model != null && Model.Count > 0)
{
    <div class="product-tags-box">
        <div class="title">
            <strong>@T("Products.Tags")</strong>
        </div>
        <div class="clear">
        </div>
        <div class="product-tags-list">
            @for (int i = 0; i < Model.Count; i++)
            {
                
                <a href="@Url.RouteUrl("ProductsByTag", new { productTagId = Model[i].Id, SeName = Model[i].SeName })" class="producttag">@Model[i].Name <span class="badge">(@Model[i].ProductCount)</span></a> 
                
                
            }
        </div>
    </div>

}