@model CatalogPagingFilteringModel.SpecificationFilterModel
@using Nop.Web.Models.Catalog;
@{
    var renderedAttributeNames = new List<string>();
}
@if (Model.Enabled)
{
    if (Model.NotFilteredItems.Count > 0)
    {
        <div class="dropdown">
          <button class="btn btn-sm dropdown-toggle" type="button" id="dropdownMenu3" data-toggle="dropdown">
            @T("Filtering.SpecificationFilter")
            <span class="caret"></span>
          </button>
          <ul class="dropdown-menu" role="menu" aria-labelledby="dropdownMenu3">
            @foreach (var item in Model.NotFilteredItems)
            {
                if (!renderedAttributeNames.Contains(item.SpecificationAttributeName))
                {
                    @*<li>@item.SpecificationAttributeName</li>*@
                    <li role="presentation"><a role="menuitem" href="@item.FilterUrl">@item.SpecificationAttributeOptionName</a></li>
                }
                  
            }
          </ul>
        </div>
    }
    if (Model.AlreadyFilteredItems.Count > 0)
    {
        <span>@T("Filtering.SpecificationFilter.CurrentlyFilteredBy")</span>
        foreach (var item in Model.AlreadyFilteredItems)
        {
            <span>@item.SpecificationAttributeOptionName</span>
        }
       
        <a href="@Model.RemoveFilterUrl">@T("Filtering.SpecificationFilter.Remove")</a>
    }
    
}