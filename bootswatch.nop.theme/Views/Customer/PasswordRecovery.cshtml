@model PasswordRecoveryModel
@using Nop.Web.Models.Customer;
@{
    Layout = "~/Views/Shared/_ColumnsTwo.cshtml";

    //title
    Html.AddTitleParts(T("PageTitle.PasswordRecovery").Text);
}
<div class="page password-recovery-page">
    <div class="page-title">
        <h1>@T("Account.PasswordRecovery")</h1>
    </div>
    <div class="clear">
    </div>
    <div class="page-body row">
        <div class="col-xs-12 col-sm-4">
            @if (!String.IsNullOrEmpty(Model.Result))
            {
                <div class="result">
                    @Model.Result
                </div>
            }
            @using (Html.BeginForm())
            {
                <p>@T("Account.PasswordRecovery.Tooltip")</p>
                <div class="form-group">
                    @Html.LabelFor(model => model.Email): @Html.RequiredHint()
                    @Html.TextBoxFor(model => model.Email, new { @class = "email form-control input-sm" })
                    @Html.ValidationMessageFor(model => model.Email, null, new { @class="label label-danger" })
                </div>
                <input type="submit" name="send-email" class="btn btn-sm password-recovery-button" value="@T("Account.PasswordRecovery.RecoverButton")" />
                
            }
        </div>
    </div>
</div>
